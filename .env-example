# Bot configuration
# Bot token generated from @BotFather
TOKEN=your_bot_token_here

# Telegram API configuration
# API hash obtained from https://my.telegram.org
API_HASH=your_api_hash_here
# API ID obtained from https://my.telegram.org (numeric)
API_ID=123456

# MongoDB configuration (optional)
# MongoDB connection string; leave the default or update if needed
MONGO_URI=uri
# MongoDB collection name (optional)
MONGO_NAME=AnimeBot

# Force subscription channel configuration
# Set FORCE to "true" to enable force subscription; "false" to disable
FORCE=false
# Channel link for force subscription (e.g., https://t.me/yourchannel)
CHANNEL_LINK=https://t.me/yourchannel
# Channel username with @ (e.g., @yourchannel)
CHANNEL_USERNAME=@yourchannel

# Owner configuration
# Owner's user id obtained from @userinfobot (numeric)
OWNER=your_owner_id

# Web configuration
# Port number on which the bot will run (e.g., 8000)
PORT=8000
